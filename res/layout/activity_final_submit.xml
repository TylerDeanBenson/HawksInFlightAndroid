<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finalBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.layouttest.ConfirmTest$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/finalWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customborder"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/finalRow0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0.50"
            android:background="@drawable/customimagewindow"
            android:gravity="center" >
            
            <ImageView
                android:id="@+id/finalImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_launcher" />

        </TableRow>

        <TableRow
            android:id="@+id/finalRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/errorTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/errorField"
                android:textColor="#FFFFFF" />

        </TableRow>

                <TableRow
                    android:id="@+id/rowTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/customformfield"
                        android:ems="10"
                        android:hint="@string/titleField"
                        android:padding="2dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/rowTable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/customformfield"
                        android:ems="10"
                        android:hint="@string/descriptionField"
                        android:inputType="textMultiLine"
                        android:padding="2dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/rowTable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/customformfield"
                        android:ems="10"
                        android:hint="@string/nameField"
                        android:padding="2dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/rowTable4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:background="@drawable/customformfield"
                        android:ems="10"
                        android:hint="@string/emailField"
                        android:inputType="textEmailAddress"
                        android:padding="2dp" />
                
        </TableRow>

        <TableRow
            android:id="@+id/confirmRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" >

            <Button
                android:id="@+id/flickrUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onNewUpload"
                android:text="@string/submit" />

            <Button
                android:id="@+id/resetForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onReset"
                android:text="@string/reset" />

        </TableRow>
    </LinearLayout>

</FrameLayout>
