<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hartford.mobile.hawksinflight"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.hartford.mobile.hawksinflight.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.hartford.mobile.hawksinflight.OpenGallery"
            android:label="@string/title_activity_open_gallery"
            android:parentActivityName="edu.hartford.mobile.hawksinflight.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.hartford.mobile.hawksinflight.MainActivity" />
        </activity>
        <activity
            android:name="edu.hartford.mobile.hawksinflight.OpenCamera"
            android:label="@string/title_activity_open_camera"
            android:parentActivityName="edu.hartford.mobile.hawksinflight.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.hartford.mobile.hawksinflight.MainActivity" />
        </activity>
        <activity
            android:name="edu.hartford.mobile.hawksinflight.ConfirmImage"
            android:label="@string/title_activity_confirm_image"
            android:parentActivityName="edu.hartford.mobile.hawksinflight.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.hartford.mobile.hawksinflight.MainActivity" />
        </activity>
        <activity
            android:name="edu.hartford.mobile.hawksinflight.FinalSubmit"
            android:label="@string/title_activity_final_submit"
            android:parentActivityName="edu.hartford.mobile.hawksinflight.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.hartford.mobile.hawksinflight.MainActivity" />
        </activity>
        <activity
            android:name="edu.hartford.mobile.hawksinflight.CameraTest"
            android:label="@string/title_activity_camera_test" >
        </activity>
    </application>

</manifest>
